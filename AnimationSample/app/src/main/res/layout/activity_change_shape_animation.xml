<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".object_anim.ChangeShapeAnimation">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shape Animation"
        android:textAlignment="center"
        android:textSize="24sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Change Corner Radius"
        android:textSize="20sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button"
        app:cornerRadius="0dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="4dp"
        android:text="Press to Change Corner Radius" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Change Object Size"
        android:textSize="20sp" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/size_button"
        android:text="Small"
        android:layout_gravity="center"
        app:cornerRadius="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Animation Time (ms)"
        android:textSize="20sp" />
    <com.google.android.material.slider.Slider
        android:id="@+id/seekbar"
        android:stepSize="100"
        android:valueFrom="100"
        android:valueTo="5000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>