<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".object_anim.ButtonRotationAnimation">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rotation Animation"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Simple Rotation"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="4dp"
        android:text="Press to Rotation" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Image Rotation"
        android:textSize="20sp" />
    <ImageView
        android:id="@+id/arrow"
        android:src="@drawable/baseline_arrow_back_24"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/arrow_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="4dp"
        android:text="Press to Rotation" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Animation Time (ms)"
        android:textSize="20sp" />
    <com.google.android.material.slider.Slider
        android:id="@+id/seekbar"
        android:stepSize="100"
        android:valueFrom="100"
        android:valueTo="5000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>