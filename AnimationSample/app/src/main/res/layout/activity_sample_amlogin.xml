<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sample_am_back"
    tools:context=".tp_anim.SampleAMLoginActivity">
<ImageView
    android:id="@+id/logo"
    android:src="@drawable/logo"
    android:layout_marginTop="100dp"
    android:layout_gravity="center_horizontal"
    android:layout_width="180dp"
    android:layout_height="180dp"/>
    <LinearLayout
        android:id="@+id/login_frame"
        android:layout_width="300dp"
        android:layout_marginTop="80dp"
        android:layout_gravity="center"
        android:layout_height="300dp"
        android:background="@color/sample_am_frame"
        android:orientation="vertical">
        <TextView
            android:textColor="@color/white"
            android:textAlignment="center"
            android:text="Join us\nright now"
            android:textStyle="bold"
            android:textSize="40sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.divider.MaterialDivider
                    app:dividerColor="@color/white"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textStyle="bold"
                    android:layout_marginHorizontal="4dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:text="or"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <com.google.android.material.divider.MaterialDivider
                    app:dividerColor="@color/white"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/login_button"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Login"
                android:layout_marginHorizontal="20dp"
                android:backgroundTint="@color/sample_am_login"
                app:cornerRadius="5dp"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/register_button"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/sample_am_register"
                android:text="Register"
                android:layout_marginHorizontal="20dp"
                android:backgroundTint="@color/white"
                app:cornerRadius="5dp"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>