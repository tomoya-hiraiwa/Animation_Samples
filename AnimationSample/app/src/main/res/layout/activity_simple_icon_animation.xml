<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".SimpleIconAnimation">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simple Icon Animation"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Icon Change"
        android:textSize="20sp" />
    <FrameLayout
        android:id="@+id/playFrame"
        android:layout_marginTop="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:visibility="invisible"
            android:id="@+id/pause"
            android:src="@drawable/baseline_pause_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/play"
            android:src="@drawable/baseline_play_arrow_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Icon Change (Center)"
        android:textSize="20sp" />
    <FrameLayout
        android:id="@+id/thumb_frame"
        android:layout_marginTop="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:visibility="invisible"
            android:id="@+id/thumb_on"
            android:src="@drawable/baseline_thumb_up_alt_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/thumb_off"
            android:src="@drawable/baseline_thumb_up_off_alt_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Like Add"
        android:textSize="20sp" />
    <FrameLayout
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="100dp">
        <ImageView
            android:layout_gravity="bottom"
            android:id="@+id/like"
            android:src="@drawable/baseline_thumb_up_alt_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_gravity="bottom"
            android:id="@+id/like_shadow"
            android:src="@drawable/baseline_thumb_up_alt_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Download"
        android:textSize="20sp" />
    <ImageView
        android:id="@+id/download"
        android:layout_marginVertical="20dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/baseline_arrow_downward_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
</ScrollView>